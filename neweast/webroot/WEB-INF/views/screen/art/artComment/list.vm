<link rel="stylesheet" type="text/css" href="$!{imageServer}/styles/datePicker.css" />
<script src="$!{imageServer}/scripts/jquery.datePicker.js" type="text/javascript"></script>
<script type="text/javascript">
     var num = 0;
     function verify(flag, id) {
             num ++;
             if(num <= 1){
        	    var url = "verify.htm?id=" + id + "&flag=" + flag;
       		    document.location = url;
        		}
         }
         jQuery( function() {
         //设置日期
         $('.date-pick').datePicker( {
         clickInput : true,
         startDate : "2010-01-01"
         });
         });
</script>
<!-- 搜索框 -->
<form id="artCommentForm" name="artCommentForm" action="list.htm" method="get">
	<div class="search-box">
        <table>
            <tr>
				<th>评论时间</th>
                <td>
                	#springBind("artCommentQuery.startDate")
					<input type="text" id="startDate" name="startDate"  value="$!{dateTool.format('yyyy-MM-dd',$!artCommentQuery.startDate)}"  readonly="readonly" size="10" class="date-pick" />
					-
					#springBind("artCommentQuery.endDate")
                    <input type="text" id="endDate" name="endDate"  value="$!{dateTool.format('yyyy-MM-dd',$!artCommentQuery.endDate)}" readonly="readonly"  size="10" class="date-pick" />
                 </td>
                 <th>艺术品名称</th>
				<td>
					#springBind("artCommentQuery.artName")
					<input type="text" name="artName" id="artName" value="$!{artCommentQuery.artName}"/>	
                </td>
           </tr>    
           <tr>
                <th>评论账号</th>
                <td>
					#springBind("artCommentQuery.buyerStockAccount")
					<input type="text" name="buyerStockAccount"  id="buyerStockAccount"  value="$!{artCommentQuery.buyerStockAccount}"/>
                </td>
                <th>被评论账号</th>
                <td>
					#springBind("artCommentQuery.sellerStockAccount")
                	<input type="text" name="sellerStockAccount" id="sellerStockAccount" value="$!{artCommentQuery.sellerStockAccount}"/>					
				</td>
   				<th></th>
				<td>	
					<input type="submit" name="search" value="查询" class="but-61" />
					<input type="reset" value="重置" onclick="window.location = 'list.htm'" class="but-62"/>
				</td>
           </tr>
</table>
</div>
<!-- 搜索框 END -->
 <div class="basic">
	<div class="listbox">
	<table  class="list-table">
		<tr >
			<th width="5%">编号</th>
			<th width="10%">评论人</th>
			<th width="10%">被评论人</th>
			<th width="20%">艺术品</th>
			<th width="25%">评论内容</th>
			<th width="15%">评论时间</th>
			<th width="15%">操作</th>
        </tr>
		#if($!{artCommentQuery} && ${artCommentQuery.totalCount} > 0)
			#foreach($artComment in $artCommentQuery.getData())
				<tr #if($!{velocityCount}%2 == 0) class="bg" #end>
					<td>$!{artComment.id}</td>
					<td>$!{artComment.buyerStockAccount}</td>
                    <td>$!{artComment.sellerStockAccount}</td>					
					<td>$!stringUtils.abbreviate($!{artComment.artName},10)</td>
					<td><p title="$!{artComment.content}">$!stringUtils.abbreviate($!{artComment.content},20)</p></td>
					<td>
						$!{dateTool.format($!{artComment.gmtCreate})}
					</td>
					<td class="link-td">
						<a href="$!{appServer}/artcomment/detail.htm?id=${artComment.id}">详情</a>
						<!-- $!{appServer}/artcomment/delete.htm?id=${artComment.id} -->
						<a  href="javascript:void(0)" onclick="delete1(${artComment.id})">删除</a>
					</td>
				</tr>	
			#end
        #else
            <tr>
                <td colspan="7">
                    <p class="ts">没有结果</p>
                </td>
            </tr>
        #end
    </table>
	 #pager($artCommentQuery, "artCommentForm")
 </div>
 </div>
 <div class="clear"></div>
</form>
<script type="text/javascript">
function delete1(vid){
	if(confirm("您确定要删除该条记录？")){
		var reason = prompt("请输出删除理由");
		if(reason!=""){
			var url="$!{appServer}/artcomment/delete.htm?id="+vid+"&remark="+reason;
			window.location =  url;
		}
	}
}
</script>