<link href="$!{imageServer}/styles/validate.css" rel="stylesheet" type="text/css" />
<script src="$!{imageServer}/scripts/jquery.validate.js" type="text/javascript"></script>
<script type="text/javascript">
//输入校验
jQuery(function(){
	$("#addForm").validate(
	{
		/*自定义验证规则*/
		rules:{
			name:{required:true,maxlength:42},
			description:{maxlength:1000},
			ordering:{required:true,number:true,min:1,max:100,digits:true}
		},
		
		/*错误提示位置*/
		errorPlacement:function(error,element){
			error.appendTo(element.siblings("span"));
			jQuery("#showResult").html("");
		}
	});
})
</script>

<script type="text/javascript">
        function JudgeSceneName()
        {
            jQuery.ajax({
            type:"post",
            url:"$!{appServer}/art/artScene/checkSceneName.htm",
            dataType:"html",
            data:"sceneName="+jQuery("#name").val(),
            beforeSend:function(XMLHttpRequest)
                {
                   // jQuery("#showResult").text("正在查询");
                },
            success:function(msg)
                {   
            	jQuery("#showResult").html("");
                    if(msg == "该场景名已经存在"){
                    	jQuery("#showResult").html(msg);
                    	jQuery("#sub").attr("disabled", true); 
                    }
                    if(msg == "该场景名可以使用"){
                    	jQuery("#sub").attr("disabled", false);
                    }
                    jQuery("#showResult").css("color","red");
                },
           complete:function(XMLHttpRequest,textStatus)
                {
                    
                },
          error:function()
               {
                  alert("shibai"); 
               }
            });
        }
</script>


<div class="main-right" >
            <div class="basic">
             <ul class="form-tab">
        <li class="c">
            <span>场景增加</span>
        </li>
    </ul>
<div class="formbox">
					
                    <div class="clear"></div>

<form id="addForm" name="addForm" action="$!{appServer}/art/artScene/scene_add.htm" method="post">
	 <div class="nr">
                    	<div class="nr-t"></div>
                        
                        <div class="nr-c">

<table class="c2">
<tr>
	<th><font color="red">*</font>场景名称：</th>
	<td>#springBind("artScene.name")
		<input id="name" name="name" class="inp required" maxLength="42" type="text" onblur="JudgeSceneName()" />
		<br/>
    	<span></span><label class="error">$!{errorMessage}</label>
    	<div id="showResult" style="float:left"></div>
	</td>
</tr>
<tr>
